#!/usr/bin/env nu -i

let available_commands = [
    config
    edit
    jellyfin
]

# System management script
def main [] {
  nu -c $"($env.PROCESS_PATH) --help"

  $available_commands
  | str join "\n"
  | ( fzf --prompt="Choose an appropriate subcommand"
          --height=~100%
          --layout=reverse
    )
  | do { exec $env.PROCESS_PATH $in }

  print "Goodbye"
}

# Manage the system configuration
def "main config" [] { config }
def config [] {
  cd ~/.config/nix-config
  clear -k
  nu -e 'just --choose --unsorted'
}

# Manage the Jellyfin server
def "main jellyfin" [] { jellyfin }
def jellyfin [] {
    cd ~/Server/jellyfin
    clear -k
    nu -e 'just'
}

# Edit this script
def "main edit" [] { edit }
def edit [] {
    exec $env.EDITOR $env.CURRENT_FILE
}
