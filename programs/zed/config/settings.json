// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "disable_ai": true,
  "icon_theme": "Catppuccin Macchiato",
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://pigeon:11434",
      "available_models": [
        {
          "name": "qwen3:32b",
          "display_name": "Qwen3-32B",
          "max_tokens": 32768
        }
      ]
    }
  },
  "theme": "kontras-light",
  "ui_font_size": 13.0,
  // "buffer_font_family": "MesloLGL Nerd Font Propo",
  "buffer_font_family": "DejaVuSansM Nerd Font Mono",
  "buffer_font_size": 13.0,
  "soft_wrap": "editor_width",
  "terminal": {
    "dock": "right",
    "option_as_meta": true,
    "font_size": 12.0,
    "line_height": "standard"
  },
  // "vim_mode": true,
  "helix_mode": true,
  // "vim": { "default_mode": "helix_normal" },
  "load_direnv": "shell_hook",
  "languages": {
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "nixfmt"
        }
      }
    },
    "Nu": {
      "tab_size": 2
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "features": "all"
        }
      }
    }
  }
}
